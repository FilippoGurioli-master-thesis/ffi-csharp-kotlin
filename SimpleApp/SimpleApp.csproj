<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Target Name="BuildKotlinLib" BeforeTargets="Build">
    <Exec Command="./build-kotlib.sh" />
  </Target>

  <ItemGroup>
    <Content Include="..\simple-kotlin-lib\lib\build\bin\simplekotlin\releaseShared\libsimplekotlinlib.so">
      <Link>libsimplekotlinlib.so</Link>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
